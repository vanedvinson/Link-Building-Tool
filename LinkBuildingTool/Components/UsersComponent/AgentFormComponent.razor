@inherits AgentCreateViewModel


<MudToolBar>  
  <MudText Typo="Typo.h6">New job</MudText>
  
</MudToolBar>
 <EditForm Model="@Agent" OnValidSubmit="@(()=>CreateOrUpdateAgent())">
<MudCard Class="ml-4 mr-4">
    <MudCardContent>
         <MudText>First Name</MudText>
         <MudTextField Variant="Variant.Outlined" Placeholder="First Name" 
                              @bind-Value="Agent.FirstName" For="@(() => Agent.FirstName)" />
         <MudText>Last Name</MudText>
         <MudTextField Variant="Variant.Outlined" Placeholder="Last Name" 
                              @bind-Value="Agent.LastName" For="@(() => Agent.LastName)" />
         <MudText>Email</MudText>
         <MudTextField Variant="Variant.Outlined" Placeholder="Email" 
                              @bind-Value="Agent.Email" For="@(() => Agent.Email)" />
         <MudText>Country</MudText>
         <MudTextField Variant="Variant.Outlined" Placeholder="Country" 
                              @bind-Value="Agent.Country" For="@(() => Agent.Country)" />
         <MudText>City</MudText>
         <MudTextField Variant="Variant.Outlined" Placeholder="City" 
                              @bind-Value="Agent.City" For="@(() => Agent.City)" />
         <MudText>Address</MudText>
         <MudTextField Variant="Variant.Outlined" Placeholder="Address" 
                              @bind-Value="Agent.Address" For="@(() => Agent.City)" />
         <MudText>Zip Code</MudText>
         <MudTextField Variant="Variant.Outlined" Placeholder="Zip Code" 
                              @bind-Value="Agent.PostalCode" For="@(() => Agent.PostalCode)" />
         <MudText>Roles</MudText>
         <MudSelect T="string" MultiSelection="true"  Variant="Variant.Outlined" Placeholder="Roles"  @bind-SelectedValues="@SelectedRoles" >
                    @foreach(var ar in Roles)
                        {
                            <MudSelectItem Value="@ar.Name"/>
                         }
         
         </MudSelect>    
        
          <MudCardActions>
                <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Filled" Color="Color.Primary" Class="ml-auto">@ButtonText</MudButton>
            </MudCardActions>
    </MudCardContent>

</MudCard>
</EditForm>
       
