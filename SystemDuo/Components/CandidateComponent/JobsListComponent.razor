
@inherits JobsViewModel

@page "/wordpress/jobs"
<MudToolBar>  
  <MudText Typo="Typo.h6">Active jobs</MudText>
  
</MudToolBar>

@foreach(var jobs in Jobs){
<MudCard Class="m-4">
    <MudCardHeader>
        <CardHeaderAvatar>
            <MudAvatar>C</MudAvatar>
        </CardHeaderAvatar>
        <CardHeaderContent>
            <MudText Typo="Typo.body1">@jobs.Name</MudText>
            <MudText Typo="Typo.body2">@jobs.Type</MudText>
        </CardHeaderContent>
        <CardHeaderActions>
            <MudIconButton Icon="@Icons.Material.Filled.More" Color="Color.Default" />
        </CardHeaderActions>
    </MudCardHeader>
    
    <MudCardContent>
         <MudText Typo="Typo.h6">Description</MudText>
        <MudText Typo="Typo.body1">@jobs.Description</MudText>
        <MudText Typo="Typo.h6">Requirements</MudText>

        @if(jobs.JobSkills!=null){
            @foreach(var skill in jobs.JobSkills)
            {
            <MudChip Color="Color.Primary">@skill.Skill!.Name</MudChip>
            }
        }
       
    </MudCardContent>
    <MudCardActions>
        <MudIconButton Icon="@Icons.Material.Filled.Favorite" Color="Color.Default" />
        <MudButton StartIcon="@Icons.Material.Filled.Send" Color="Color.Default" >Apply</MudButton>
    </MudCardActions>
</MudCard>
}


