@inherits EmployeeCreateViewModel

<MudToolBar>  
  <MudText Typo="Typo.h6">New job</MudText>
  
</MudToolBar>
 <EditForm Model="@NewEmployee" OnValidSubmit="@(()=>CreateEmployee())">
<MudCard Class="ml-4 mr-4">
    <MudCardContent>
        
         
         <MudDatePicker Label="Hire Date" @bind-Date="@NewEmployee.HireDate"/>



         @*<MudTextField Label="First Name" 
                              @bind-Value="NewEmployee.FirstName" For="@(() => NewEmployee.FirstName)" />
         <MudTextField Label="Last Name" 
                              @bind-Value="NewEmployee.LastName" For="@(() => NewEmployee.LastName)" />
         <MudTextField Label="Email" 
                              @bind-Value="NewEmployee.Email" For="@(() => NewEmployee.Email)" />    *@      
         <MudSelect T="Company"  @bind-Value="@SelectedCompany" Label="Company">
            @foreach(var d in Companies)
                {
            <MudSelectItem Value="@d"/>
                 }
                  
         </MudSelect>
          <MudSelect T="Job"  @bind-Value="@SelectedJob" Label="Job">
            @foreach(var d in SelectedCompany!.Jobs!)
                {
            <MudSelectItem Value="@d"/>
                 }
                  
         </MudSelect>
         <MudSelect T="User"  @bind-Value="@NewEmployee.User" Label="Candidate">
            @foreach(var d in Candidates)
                {
            <MudSelectItem Value="@d"/>
                 }
                  
         </MudSelect>
      
        
          <MudCardActions>
                <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Filled" Color="Color.Primary" Class="ml-auto">Create</MudButton>
            </MudCardActions>
    </MudCardContent>

</MudCard>
</EditForm>
       
