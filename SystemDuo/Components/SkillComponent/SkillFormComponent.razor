@inject ISnackbar Snackbar
@inherits SkillsCreateUpdateViewModel
<MudDialog Style="width:600px">
    <DialogContent>
      <EditForm Model="@Skills">
        <DataAnnotationsValidator />
        <MudCard Class="m-0" Elevation="0">
            <MudCardContent>
                <MudText Class="fw-bold mt-2">Name</MudText>
                <MudTextField Variant="Variant.Outlined" Class="mt-0" Placeholder="Name"
                              @bind-Value="Skills.Name" For="@(() => Skills.Name)" />
                   
            </MudCardContent>
          
        </MudCard>
       
       
    </EditForm>
       
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" Variant="Variant.Filled"  OnClick="@(()=>CreateSkill())">Save</MudButton>
    </DialogActions>
</MudDialog>


   

