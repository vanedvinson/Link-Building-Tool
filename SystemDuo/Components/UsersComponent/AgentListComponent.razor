@inherits AgentViewModel


<MudTabs>

    <MudTabPanel Text="Agents" OnClick="@(()=>GetAllAgents())">
        <MudToolBar>  
            <MudText Typo="Typo.h6">Agents</MudText>  
        </MudToolBar>
        <MudTable Class="m-4" Items="@Agents" Dense=true Hover="true" Bordered="false" Breakpoint="Breakpoint.Sm" Elevation="4" Filter="new Func<User,bool>(FilterFunc1)">
    <ToolBarContent >
       
          <MudButton StartIcon="@Icons.Material.Filled.Add" Variant="Variant.Filled" Color="Color.Primary" Size="Size.Small" Class="ma-2"  OnClick="NavigateToCreateAgentPage" >
             New agent 
             </MudButton>
        <MudSpacer />
        <MudSpacer />
        <MudSpacer />
        <MudSpacer />
        <MudSpacer />
        <MudSpacer />
        <MudSpacer />
         <MudTextField Immediate="true" Variant="Variant.Outlined" @bind-Value="@SearchStringAgents" Placeholder="Search" Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.Search" IconSize="Size.Medium" Class="mt-0 w-25"></MudTextField>
   
     </ToolBarContent>

    
      <ColGroup>
        <col  />
        <col  />
        <col  />
      
        <col style="width: 60px;"/>
        <col style="width: 60px;" />
       
        
    </ColGroup>
    <HeaderContent>
        <MudTh>First Name</MudTh>      
        <MudTh>Last Name</MudTh>      
        <MudTh>Email</MudTh>      
             
        <MudTh></MudTh>  
        <MudTh></MudTh>
       
    </HeaderContent>
    <RowTemplate>         
        <MudTd DataLabel="First Name">@context.FirstName</MudTd>
        <MudTd DataLabel="Last Name">@context.LastName</MudTd>
        <MudTd DataLabel="Email">@context.Email</MudTd>
       
        
        
       
        <MudTd DataLabel="View"><MudIconButton Icon="@Icons.Material.Filled.Edit" Variant="Variant.Filled" Color="Color.Warning" Size="Size.Small" OnClick="@(()=>NavigateToUpdateAgentPage(@context.Id))"></MudIconButton></MudTd>     
        <MudTd DataLabel="Delete"><MudIconButton Icon="@Icons.Material.Filled.Delete" Variant="Variant.Filled" Color="Color.Error"  Size="Size.Small" OnClick="@(()=>DeleteAgent(@context.Id))"  ></MudIconButton></MudTd>   
        
             
    </RowTemplate>
    <PagerContent>
        <MudTablePager />
    </PagerContent>
</MudTable>
 
    </MudTabPanel>
    <MudTabPanel Text="Archived" OnClick="@(()=>GetAllDeletedAgents())">
        <MudToolBar>  
  <MudText Typo="Typo.h6">Archived Agents</MudText>
  
</MudToolBar>


<MudTable Class="ml-4 mr-4" Items="@Agents" Dense=true Hover="true" Bordered="false" Breakpoint="Breakpoint.Sm" Elevation="4" Filter="new Func<User,bool>(FilterFunc2)">
    <ToolBarContent >             
        <MudSpacer />
        <MudSpacer />
        <MudSpacer />
        <MudSpacer />
        <MudSpacer />
        <MudSpacer />
        <MudSpacer />
        <MudTextField Immediate="true" @bind-Value="@SearchStringArchAgents" Variant="Variant.Outlined" Placeholder="Search" Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.Search" IconSize="Size.Medium" Class="mt-0 w-25"></MudTextField>
   
     </ToolBarContent>

    
      <ColGroup>
        <col  />
        <col  />
        <col  />  
        <col style="width: 60px;"/>
       
    </ColGroup>
    <HeaderContent>
        <MudTh>First Name</MudTh>      
        <MudTh>Last Name</MudTh>      
        <MudTh>Email</MudTh>      
             
      
        <MudTh></MudTh>
       
    </HeaderContent>
    <RowTemplate>         
        <MudTd DataLabel="First Name">@context.FirstName</MudTd>
        <MudTd DataLabel="Last Name">@context.LastName</MudTd>
        <MudTd DataLabel="Email">@context.Email</MudTd>
      
        <MudTd DataLabel="Undo"><MudIconButton Icon="@Icons.Material.Filled.Undo" Variant="Variant.Filled" Color="Color.Warning" Size="Size.Small" OnClick="@(()=>UndoDeletedAgent(@context.Id))"></MudIconButton></MudTd>     
            
    </RowTemplate>
      <PagerContent>
        <MudTablePager />
    </PagerContent>
</MudTable>
 
    </MudTabPanel>

</MudTabs>
