@inherits LocationsViewModel
@page "/locations"

<AuthorizeView Roles="Administrator" Context="Test">
    <Authorized>
        <MudTabs>
    <MudTabPanel Text="Locations" OnClick="GetAllLocations" >
        <MudToolBar>  
            <MudText Typo="Typo.h6">Locations</MudText>  
        </MudToolBar>
        <MudTable Class="m-4" Items="@JobLocations"  Dense=true Hover="true" Bordered="false" Breakpoint="Breakpoint.Sm" Elevation="4" Filter="new Func<Location,bool>(FilterFunc1)">
    <ToolBarContent >
       
        <MudButton StartIcon="@Icons.Material.Filled.Add" Variant="Variant.Filled" Color="Color.Primary" Size="Size.Small" Class="ma-2" OnClick="OpenCreateJobLocation"  >
             New location 
        </MudButton>
        <MudSpacer />
        <MudSpacer />
        <MudSpacer />
        <MudSpacer />
        <MudSpacer />
        <MudSpacer />
        <MudSpacer />
         <MudTextField Immediate="true" Variant="Variant.Outlined" @bind-Value="@SearchStringLocations" Placeholder="Search" Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.Search" IconSize="Size.Medium" Class="mt-0 w-25" Clearable=true></MudTextField>
   
     </ToolBarContent>
      <ColGroup>
        <col  />
        <col  />
        <col  />
        <col  />
        
        <col style="width: 60px;"/>
        <col style="width: 60px;" />
       
        
    </ColGroup>
    <HeaderContent>
        <MudTh>Country</MudTh>      
        <MudTh>City</MudTh>      
        <MudTh>Address</MudTh>      
        <MudTh>Postal code</MudTh>      
             
                     
        <MudTh></MudTh>  
        <MudTh></MudTh>
       
    </HeaderContent>
    <RowTemplate>         
        <MudTd DataLabel="Country">@context.Country</MudTd>
        <MudTd DataLabel="City">@context.City</MudTd>
        <MudTd DataLabel="Address">@context.Address</MudTd>
        <MudTd DataLabel="Postal code">@context.PostalCode</MudTd>
        <MudTd DataLabel="View"><MudIconButton Icon="@Icons.Material.Filled.Edit" Variant="Variant.Filled" Color="Color.Warning" Size="Size.Small" OnClick="@(()=>OpenUpdateJobLocation(@context))"></MudIconButton></MudTd>     
        <MudTd DataLabel="Delete"><MudIconButton Icon="@Icons.Material.Filled.Delete" Variant="Variant.Filled" Color="Color.Error"  Size="Size.Small"OnClick="@(()=>DeleteLocationAsync(@context.Id))" ></MudIconButton></MudTd>              
    </RowTemplate>

    <PagerContent>
      <MudTablePager />
    </PagerContent>
</MudTable>



    </MudTabPanel>
       <MudTabPanel Text="Archived Locations" OnClick="GetAllDeletedLocations">
        <MudTable Class="m-4" Items="@JobLocations"  Dense=true Hover="true" Bordered="false" Breakpoint="Breakpoint.Sm" Elevation="4" Filter="new Func<Location,bool>(FilterFunc2)">
    <ToolBarContent >
       <MudSpacer />
        <MudSpacer />
        <MudSpacer />
        <MudSpacer />
        <MudSpacer />
        <MudSpacer />
        <MudSpacer />
         <MudTextField Immediate="true" Variant="Variant.Outlined" @bind-Value="@SearchStringArchLocations" Placeholder="Search" Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.Search" IconSize="Size.Medium" Class="mt-0 w-25"></MudTextField>
   
     </ToolBarContent>
      <ColGroup>
        <col  />
        <col  />
        <col  />
        <col  />
        
        <col style="width: 60px;"/>
        <col style="width: 60px;" />
       
        
    </ColGroup>
    <HeaderContent>
        <MudTh>Country</MudTh>      
        <MudTh>City</MudTh>      
        <MudTh>Address</MudTh>      
        <MudTh>Postal code</MudTh>      
             
                     
        <MudTh></MudTh>  
        <MudTh></MudTh>
       
    </HeaderContent>
    <RowTemplate>         
        <MudTd DataLabel="Country">@context.Country</MudTd>
        <MudTd DataLabel="City">@context.City</MudTd>
        <MudTd DataLabel="Address">@context.Address</MudTd>
        <MudTd DataLabel="Postal code">@context.PostalCode</MudTd>
        
     
       
       <MudTd DataLabel="Undo"><MudIconButton Icon="@Icons.Material.Filled.Undo" Variant="Variant.Filled" Color="Color.Warning" Size="Size.Small" OnClick="@(()=>UndoDeletedLocationAsync(@context.Id))"></MudIconButton></MudTd>     
       
        
       
           
    </RowTemplate>
      <PagerContent>
        <MudTablePager />
    </PagerContent>
</MudTable>



    </MudTabPanel>
</MudTabs>


    </Authorized>
</AuthorizeView>

