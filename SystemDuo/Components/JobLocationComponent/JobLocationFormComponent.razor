@inherits JobLocationCreateViewModel

@page "/create/jobLocation"
<MudDialog Style="width:600px">
    
    <DialogContent>

 <EditForm Model="@JobLocation">
<MudCard Class="m-0" Elevation="0">
    <MudCardContent>
         <MudText Class="fw-bold mt-2">Country</MudText>
         <MudTextField Variant="Variant.Outlined" Class="mt-0" Placeholder="Country" 
                              @bind-Value="JobLocation.Country" For="@(() => JobLocation.Country)" />
         <MudText Class="fw-bold mt-2">City</MudText>
         <MudTextField Variant="Variant.Outlined" Placeholder="City" 
                              @bind-Value="JobLocation.City" For="@(() => JobLocation.City)" />
         <MudText Class="fw-bold mt-2">Address</MudText>
         <MudTextField Variant="Variant.Outlined" Placeholder="Address" 
                              @bind-Value="JobLocation.Address" For="@(() => JobLocation.Address)" />
         <MudText Class="fw-bold mt-2">Zip code</MudText>
         <MudTextField Variant="Variant.Outlined" Placeholder="Zip code" 
                              @bind-Value="JobLocation.PostalCode" For="@(() => JobLocation.PostalCode)" />                     
         
        
    </MudCardContent>

</MudCard>
</EditForm>
</DialogContent>
<DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="CreateJobLocations">Create</MudButton>
    </DialogActions>
</MudDialog>

